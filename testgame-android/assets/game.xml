<?xml version="1.0" encoding="UTF-8"?>
<game
    id="SetGame"
    class="com.blox.test.TestGame" >

    <params>

        <param
            key="provider"
            value="com.blox.framework.v0.impl.libgdx.GdxGameProvider" />

        <param
            key="virtual-width"
            value="550" />

        <param
            key="virtual-height"
            value="800" />

        <param
            key="default-font"
            value="open-sans-400" />

        <param
            key="default-skin"
            value="ppt" />

        <param
            key="default-screen"
            value="splash" />

        <param
            key="screen-switcher"
            value="sliding,0.5" />

        <param
            key="form-switcher"
            value="sliding,0.25" />
    </params>

    <screens>

        <screen
            id="splash"
            class="com.blox.test.SplashScreen" />

        <screen
            id="menu"
            class="com.blox.test.MenuScreen" />
    </screens>

    <forms>

        <form id="mainMenu" >
            <button
                id="btnSoundTest"
                text="Play Sound"
                y="14" />

            <button
                id="btnExit"
                action="exit"
                text="Exit"
                y="4" />
        </form>
    </forms>

    <animations>
    </animations>

    <resources>

        <textures>

            <texture
                id="ppt-button-default"
                path="img/ui/button-default.png" />

            <texture
                id="ppt-button-disabled"
                path="img/ui/button-disabled.png" />

            <texture
                id="ppt-button-focused"
                path="img/ui/button-focused.png" />

            <texture
                id="ppt-checkbox-checked"
                path="img/ui/checkbox-checked.png" />

            <texture
                id="ppt-checkbox-unchecked"
                path="img/ui/checkbox-unchecked.png" />
        </textures>

        <sounds>

            <sound
                id="success"
                path="sound/success.wav" />
        </sounds>

        <musics>
        </musics>

        <fonts>

            <font
                id="open-sans-400"
                path="fonts/open-sans-400.otf"
                primary-resource="true"
                sizes="12,18,24,36,48,60,72" />
        </fonts>
    </resources>

    <skins>

        <skin id="ppt" >

            <form
                cols="16"
                rows="32" />

            <button
                cols="8"
                rows="2"
                texture-default="ppt-button-default"
                texture-disabled="ppt-button-disabled"
                texture-focused="ppt-button-focused"
                x="4" />

            <checkbox
                rows="2"
                texture-checked="ppt-checkbox-checked"
                texture-unchecked="ppt-checkbox-unchecked" />

            <label
                align="W"
                rows="2"
                color="#fff" />
        </skin>
    </skins>

</game>