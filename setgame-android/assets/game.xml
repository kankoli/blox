                path="img/cards/emptycard.png" />

            <texture
                id="bg-splash"
                path="img/bg/bg-splash.png"
                resource-load="primary" />

            <texture
                id="bg-menu"
                path="img/bg/bg-menu.png" />

            <texture
                id="bg-desk"
                path="img/bg/bg-desk.png" />

            <texture
                id="bg-scoreBoard"
                path="img/bg/bg-score-board.png" />
        </textures>

        <sounds>

            <sound
                id="ppt-button-click"
                path="sound/flip.wav" />

            <sound
                id="ppt-checkbox-click"
                path="sound/checkbox2.wav" />

            <sound
                id="success"
                path="sound/success.wav" />

            <sound
                id="error"
                path="sound/error.wav" />

            <sound
                id="flip"
                path="sound/flip.wav" />

            <sound
                id="wait"
                path="sound/wait.wav" />

            <sound
                id="time-up"
                path="sound/time-up.wav" />
        </sounds>

        <musics>

            <music
                id="game-music"
                path="music/game-bg.mp3"
                resource-load="ondemand" />

            <music
                id="menu-music"
                path="music/menu-bg.mp3"
                resource-load="ondemand" />

            <music
                id="scoreBoard-music"
                path="music/scoreboard-bg.mp3"
                resource-load="ondemand" />
        </musics>

        <fonts>

            <font
                id="JetSet"
                path="fonts/JetSet.ttf"
                resource-load="primary"
                sizes="12,18,24,36,48,60,72" />
        </fonts>
    </resources>

    <skins>

        <skin id="ppt" >

            <form
                cols="16"
                rows="32" />

            <button
                cols="8"
                rows="2"
                sound-click="ppt-button-click"
                texture-default="ppt-button-default"
                texture-disabled="ppt-button-disabled"
                texture-focused="ppt-button-focused"
                vibrate="50"
                x="4" />

            <checkbox
                rows="2"
                sound-click="ppt-checkbox-click"
                texture-checked="ppt-checkbox-checked"
                texture-unchecked="ppt-checkbox-unchecked" />

            <label
                align="W"
                rows="2"
                color="#fff" />
        </skin>
    </skins>

</game>