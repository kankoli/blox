<?xml version="1.0" encoding="UTF-8"?>
<game
    id="SetGame"
    class="com.blox.setgame.view.SetGame" >

    <params>

        <param
            key="provider"
            value="com.blox.framework.v0.impl.libgdx.GdxGameProvider" />

        <param
            key="settings-key"
            value="com.blox.SetGame" />

        <param
            key="virtual-width"
            value="550" />

        <param
            key="virtual-height"
            value="800" />

        <param
            key="default-font"
            value="JetSet,36" />

        <param
            key="default-skin"
            value="ppt" />

        <param
            key="default-screen"
            value="splash" />

        <param
            key="screen-switcher"
            value="sliding,0.5" />

        <param
            key="form-switcher"
            value="sliding,0.25" />

        <param
            key="allow-exit-on-back"
            value="false" />
    </params>

    <screens>

        <screen
            id="challenge"
            background-music="game-music"
            background-texture="bg-desk"
            class="com.blox.setgame.view.ChallengeModeScreen" />

        <screen
            id="learning"
            background-music="game-music"
            background-texture="bg-desk"
            class="com.blox.setgame.view.LearningModeScreen" />

        <screen
            id="multiplayer"
            background-music="game-music"
            background-texture="bg-desk"
            class="com.blox.setgame.view.MultiplayerModeScreen" />

        <screen
            id="menu"
            background-music="menu-music"
            background-texture="bg-menu"
            class="com.blox.setgame.view.MenuScreen" />

        <screen
            id="practice"
            background-music="game-music"
            background-texture="bg-desk"
            class="com.blox.setgame.view.PracticeModeScreen" />

        <screen
            id="relax"
            background-music="game-music"
            background-texture="bg-desk"
            class="com.blox.setgame.view.RelaxModeScreen" />

        <screen
            id="splash"
            background-texture="bg-splash"
            class="com.blox.setgame.view.SplashScreen" />

        <screen
            id="scoreBoard"
            background-music="scoreBoard-music"
            background-texture="bg-scoreBoard"
            class="com.blox.setgame.view.ScoreBoardScreen" />
    </screens>

    <forms>

        <form id="mainMenu" >

            <button
                id="btnPlay"
                action="form=modeSelection"
                text="Play"
                y="24" />

            <button
                id="btnSetting"
                action="form=settings"
                text="Settings"
                y="20" />

            <button
                id="btnLogin"
                action="form=login"
                text="Login"
                y="16" />

            <button
                id="btnScoreBoard"
                action="form=scoreBoardModeSelection"
                text="Hi-Scores"
                y="12" />

            <button
                id="btnExitGame"
                action="exit"
                text="Exit Game"
                y="4" />
        </form>

        <form id="modeSelection" >

            <button
                id="btnLearning"
                action="screen=learning"
                text="Learning"
                y="26" />

            <button
                id="btnPractice"
                action="screen=practice"
                text="Practice"
                y="22" />

            <button
                id="btnRelax"
                action="screen=relax"
                text="Relax"
                y="18" />

            <button
                id="btnChallenge"
                action="screen=challenge"
                text="Challenge"
                y="14" />

            <button
                id="btnMultiplayer"
                action="screen=multiplayer"
                text="Multiplayer"
                y="10" />

            <button
                id="btnBack"
                action="formback=mainMenu"
                text="Back"
                y="4" />
        </form>

        <form id="settings" >

            <label
                id="lblSound"
                cols="10"
                text="Sound"
                x="2"
                y="22" />

            <checkbox
                id="chkSounds"
                action="bind=settings.sound,true"
                cols="2"
                x="13"
                y="22" />

            <label
                id="lblMusic"
                cols="10"
                text="Music"
                x="2"
                y="18" />

            <checkbox
                id="chkMusic"
                action="bind=settings.music,true"
                cols="2"
                x="13"
                y="18" />

            <label
                id="lblVibration"
                cols="10"
                text="Vibration"
                x="2"
                y="14" />

            <checkbox
                id="chkVibration"
                action="bind=settings.vibration,true"
                cols="2"
                x="13"
                y="14" />

            <button
                id="btnBack"
                action="formback=mainMenu"
                text="Back"
                y="4" />
        </form>

        <form id="login" >

            <button
                id="txtUsername"
                cols="14"
                text="Username"
                x="1"
                y="24" />

            <button
                id="txtPassword"
                cols="14"
                text="Password"
                x="1"
                y="21" />

            <button
                id="btnLogin"
                action="login"
                cols="6"
                text="Login"
                x="1"
                y="17" />

            <button
                id="btnSignUp"
                action="form=signup"
                cols="6"
                text="Sign Up"
                x="9"
                y="17" />

            <button
                id="btnLoginFacebook"
                cols="14"
                text="Login With Facebook"
                x="1"
                y="10" />

            <button
                id="btnBack"
                action="formback=mainMenu"
                text="Back"
                y="4" />
        </form>

        <form id="signup" >

            <button
                id="txtUsername"
                cols="14"
                text="Username"
                x="1"
                y="24" />

            <button
                id="txtEmail"
                cols="14"
                text="Email"
                x="1"
                y="21" />

            <button
                id="txtPassword"
                cols="14"
                text="Password"
                x="1"
                y="18" />

            <button
                id="txtPasswordConfirm"
                cols="14"
                text="Password Confirm"
                x="1"
                y="15" />

            <button
                id="btnSignUp"
                action="signup"
                text="Sign Up"
                y="10" />

            <button
                id="btnBack"
                action="formback=login"
                text="Back"
                y="4" />
        </form>

        <form id="scoreBoardModeSelection" >

            <button
                id="btnPractice"
                action="screen=scoreBoard"
                text="Practice"
                y="20" />

            <button
                id="btnChallenge"
                action="screen=scoreBoard"
                text="Challenge"
                y="16" />

            <button
                id="btnMultiplayer"
                action="screen=scoreBoard"
                text="Multiplayer"
                y="12" />

            <button
                id="btnBack"
                action="formback=mainMenu"
                text="Back"
                y="4" />
        </form>
    </forms>

    <animations>
    </animations>

    <resources>

        <textures>

            <texture
                id="ppt-button-default"
                path="img/ui/button-default.png" />

            <texture
                id="ppt-button-disabled"
                path="img/ui/button-disabled.png" />

            <texture
                id="ppt-button-focused"
                path="img/ui/button-focused.png" />

            <texture
                id="ppt-checkbox-checked"
                path="img/ui/checkbox-checked.png" />

            <texture
                id="ppt-checkbox-unchecked"
                path="img/ui/checkbox-unchecked.png" />

            <texture
