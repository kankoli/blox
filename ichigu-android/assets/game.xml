<?xml version="1.0" encoding="UTF-8"?>
<game
    id="Ichigu"
    class="com.turpgames.ichigu.view.IchiguGame"
    version="1.1.0" >

    <params>

        <param
            key="provider"
            value="com.turpgames.framework.v0.impl.libgdx.GdxGameProvider" />

        <param
            key="settings-key"
            value="com.turpgames.ichigu" />

        <param
            key="virtual-width"
            value="550" />

        <param
            key="virtual-height"
            value="800" />

        <param
            key="default-font"
            value="Akachen_chinese,1" />

        <param
            key="default-skin"
            value="ppt" />

        <param
            key="default-screen"
            value="splash" />

        <param
            key="screen-switcher"
            value="sliding,0.30" />

        <param
            key="form-switcher"
            value="sliding,0.30" />

        <param
            key="tutorial-page-switcher"
            value="sliding,0.25" />

        <param
            key="allow-exit-on-back"
            value="true" />

        <param
            key="turp-address"
            value="http://www.turpgames.com" />

        <param
            key="libgdx-address"
            value="http://libgdx.badlogicgames.com" />

        <param
            key="play-store-address"
            value="https://play.google.com/store/apps/details?id=com.turpgames.ichigu" />

        <param
            key="app-store-address-ios7"
            value="itms-apps://itunes.apple.com/app/id737312134" />

        <param
            key="app-store-address-old"
            value="itms-apps://itunes.apple.com/WebObjects/MZStore.woa/wa/viewContentsUserReviews?type=Purple+Software&amp;id=737312134" />
    </params>

    <screens>

        <screen
            id="tutorial"
            class="com.turpgames.ichigu.view.TutorialModeScreen" />

        <screen
            id="practice"
            class="com.turpgames.ichigu.view.PracticeModeScreen" />

        <screen
            id="minichallenge"
            class="com.turpgames.ichigu.view.MiniChallengeModeScreen" />

        <screen
            id="relax"
            class="com.turpgames.ichigu.view.RelaxModeScreen" />

        <screen
            id="normal"
            class="com.turpgames.ichigu.view.NormalModeScreen" />

        <screen
            id="fullchallenge"
            class="com.turpgames.ichigu.view.FullChallengeModeScreen" />

        <screen
            id="multiplayer"
            class="com.turpgames.ichigu.view.MultiplayerModeScreen" />

        <screen
            id="menu"
            class="com.turpgames.ichigu.view.MenuScreen" />

        <screen
            id="splash"
            class="com.turpgames.ichigu.view.SplashScreen" />

        <screen
            id="scoreBoard"
            class="com.turpgames.ichigu.view.ScoreBoardScreen" />

        <screen
            id="about"
            class="com.turpgames.ichigu.view.AboutScreen" />
    </screens>

    <forms>

        <form id="mainMenu" >

            <label
                id="lblGameName"
                cols="16"
                font-scale="1.5"
                rows="2"
                text="Ichigu"
                x="0"
                y="26"
                color="#56bd89ff" />

            <button
                id="btnPlay"
                action="form=playMenu"
                resource-text="play"
                y="20" />

            <button
                id="btnLearning"
                action="screen=tutorial"
                resource-text="howToPlay"
                y="15" />

            <button
                id="btnScoreBoard"
                action="screen=scoreBoard"
                resource-text="hiScores"
                y="12" />

            <button
                id="btnAbout"
                action="screen=about"
                resource-text="about"
                y="9" />

            <button
                id="btnExitGame"
                action="exit"
                focus-color="#d0583bff"
                hidden-ios="true"
                resource-text="exitGame"
                y="4" />
        </form>

        <form id="playMenu" >

            <button
                id="btnPractice"
                action="screen=practice"
                resource-text="practice"
                y="24" />

            <button
                id="btnMiniChallenge"
                action="screen=minichallenge"
                resource-text="miniChallenge"
                y="20" />

            <button
                id="btnNormal"
                action="screen=normal"
                resource-text="normalMode"
                y="12" />

            <button
                id="btnChallenge"
                action="screen=fullchallenge"
                resource-text="fullChallenge"
                y="8" />
        </form>
    </forms>

    <animations>
    </animations>

    <resources>

        <fonts>

            <font
                id="Akachen_chinese"
                path="fonts/chinese/akachen_chinese.fnt" />
        </fonts>

        <textures>

            <texture
                id="logo"
                path="img/logo.png"
                resource-load="primary" />

            <texture
