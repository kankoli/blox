        <languageX
            id="cn-CN"
            encoding="UTF8"
            flag-texture-id="flag_cn"
            path="lang/Strings_cn_CN.properties" />
    </languages>

    <skins>

        <skin id="ppt" >

            <form
                cols="16"
                rows="32" />

            <button
                cols="8"
                focus-color="#3974b1ff"
                font-scale="1.2"
                halign="center"
                rows="2"
                sound-click="flip"
                vibrate="50"
                x="4" />

            <label
                halign="center"
                rows="2"
                color="#fff" />
        </skin>
    </skins>

</game>