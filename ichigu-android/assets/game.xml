                path="img/about/libgdx.png" />
        </textures>

        <sounds>

            <sound
                id="success"
                path="sound/success.mp3" />

            <sound
                id="error"
                path="sound/error.mp3" />

            <sound
                id="flip"
                path="sound/flip.mp3" />

            <sound
                id="wait"
                path="sound/wait.mp3" />

            <sound
                id="time-up"
                path="sound/time-up.mp3" />
        </sounds>
    </resources>

    <languages>

        <language
            id="en-US"
            encoding="UTF8"
            flag-texture-id="flag_en_us"
            path="lang/Strings_en_US.properties" />

        <language
            id="it-IT"
            encoding="UTF8"
            flag-texture-id="flag_it"
            path="lang/Strings_it_IT.properties" />

        <language
            id="tr-TR"
            encoding="UTF8"
